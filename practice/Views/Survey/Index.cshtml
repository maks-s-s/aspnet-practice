@model practice.Models.Survey

<h1>@Model.Name</h1>
<p><strong>Тема:</strong> @Model.Topic</p>
<p><strong>Хештеги:</strong> @string.Join(", ", Model.Hashtags)</p>

<h3>Питання:</h3>
<ul>
    @foreach (var question in Model.Questions)
    {
        <li>
            <strong>@question.Text</strong>
            <ul>
                @foreach (var answer in question.Answers)
                {
                    <li style="background-color:@(answer.IsCorrect ? "lightgreen" : "transparent"); padding:5px; margin:2px 0;">
                        @answer.Text
                    </li>
                }
            </ul>
        </li>
    }
</ul>
