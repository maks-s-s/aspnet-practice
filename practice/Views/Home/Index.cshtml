@model List<practice.Models.Survey>

<style>
    .survey-card {
        border: 1px solid #ccc;
        padding: 15px;
        margin: 15px;
        border-radius: 8px;
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
        width: 250px;
        display: inline-block;
        vertical-align: top;
        position: relative;
        background-color: #fff;
    }

        .survey-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

    .top-right-menu {
        position: fixed;
        top: 10px;
        right: 10px;
    }

    .create-btn {
        margin-bottom: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 6px;
        border: none;
        background-color: #28a745;
        color: white;
    }

    .action-buttons {
        position: absolute;
        top: 5px;
        right: 5px;
        display: flex;
        gap: 5px;
    }

    .action-btn {
        border: none;
        background: none;
        cursor: pointer;
        font-size: 1.2rem;
        padding: 3px;
    }

    .edit-btn {
        color: #007bff;
    }

    .delete-btn {
        color: #dc3545;
    }
</style>

<div class="top-right-menu">
    <button onclick="alert('User: Максим\nEmail: max@example.com\nRole: User')">☰</button>
</div>

<h1>Опитування</h1>

<button class="create-btn" onclick="location.href='@Url.Action("Create", "Survey")'">+ Додати опитування</button>

@foreach (var survey in Model)
{
    <div class="survey-card" onclick="location.href='/surveys/watch?id=@survey.Id'">
        <div class="action-buttons" onclick="event.stopPropagation();">
            <button class="action-btn edit-btn" title="Редагувати"
                    onclick="location.href='/surveys/edit?id=@survey.Id'">
                ✏️
            </button>
            <button class="action-btn delete-btn" title="Видалити"
                    onclick="if(confirm('Ви впевнені, що хочете видалити опитування?')) location.href='/surveys/delete?id=@survey.Id'">
                🗑️
            </button>
        </div>
        <h3>@survey.Name</h3>
        <p><strong>Тема:</strong> @survey.Topic</p>
        <p><strong>Хештеги:</strong> @string.Join(", ", survey.Hashtags.Select(h => h.Tag))</p>
    </div>
}
